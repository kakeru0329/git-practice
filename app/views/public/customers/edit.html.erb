<div class="container">
  <h1>会員情報編集</h1>
    <div class="row my-5 d-flex justify-content-center">
          <div class="col-xs-12">
        <%= form_with model: @customer, url: customer_update_path(@customer) do |f| %>
          <table>
            <tr>
              <div class="form_group">
                <%= f.label :氏名, class:"form_label" %>
                <%= f.text_field :last_name %>
                <%= f.text_field :first_name %>
              </div>
            </tr>
            <tr>
              <div class="form_group">
                <%= f.label :フリガナ, class:"form_label" %>
                <%= f.text_field :last_name_kana %>
                <%= f.text_field :first_name_kana %>
              </div>
            </tr>
            <tr>
              <div class="form_group">
                <%= f.label :メールアドレス, class:"form_label" %>
                <%= f.email_field :email %>
              </div>
            </tr>
            <tr>
              <div class="form_group">
                <%= f.label :郵便番号, class:"form_label" %>
                <%= f.text_field :postal_code %>
              </div>
            </tr>
            <tr>
              <div class="form_group">
                <%= f.label :住所, class:"form_label" %>
                <%= f.text_field :address %>
              </div>
            </tr>
            <tr>
              <div class="form_group">
                <%= f.label :電話番号, class:"form_label" %>
                <%= f.text_field :telephone_number %>
              </div>
            </tr>
            <div class="form_group">
              <%= f.submit '編集を保存', class:"btn btn-success my-3 mr-3" %>
              <%= link_to "退会する場合", customer_unsubscribe_path, class:"btn btn-outline-secondary" %>
            </div>
          </table>
        <% end %>
      </div>
    </div>

</div>