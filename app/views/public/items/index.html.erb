<div class="container">
  <div class="row text-center">
    <div class="col-md-12 mt-5">
      <h2>商品一覧（全<%= @quantity %>件)</h2><br>
        <div class="row">
          <% @items.each do |item| %>
          <div class="box" style="float:left; margin-right:20px;">
            <%= link_to item_path(item.id) do %>
              <%= image_tag item.get_image(200,100) %><br>
            <% end %>
            <p><%= link_to item.name, item_path(item.id) %></p>
            <p>¥<%= item.with_tax_price %></p>
          </div>
          <% end %>
        </div>
        <div class="col-xs-6 col-xs-offset-4 ">
          <%= paginate @items %>
        </div> <!-- ページネーション用記載.コントローラに何項目ごとにページを分けるか記載 -->
      </div>
    </div>
  </div>
</div>