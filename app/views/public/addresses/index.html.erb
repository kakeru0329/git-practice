<h1>配送先登録・一覧</h1>
<%# 新規登録 %>
<div class="row my-5 d-flex justify-content-center">
    <div class="col-xs-12">
      <%= form_with model: @address do |f| %>
        <div class="form-group col-xs-12">
          <%= f.label :"郵便番号(ハイフンなし)" ,class: "col-xs-3 control-label" %>
          <%= f.text_field :postal_code, class: "col-xs-4 form-control-static postal_code" %>
        </div>
        <div class="form-group col-xs-12">
          <%= f.label :"住所",class: "col-xs-3 control-label" %>
          <%= f.text_field :address, class: "col-xs-4 form-control-static postal_code" %>
        </div>
        <div class="form-group col-xs-12">
          <%= f.label :"宛名",class: "col-xs-3 control-label" %>
          <%= f.text_field :name, class: "col-xs-4 form-control-static postal_code" %>
        </div>
        <%= f.submit '登録する' ,class: "col-xs-2 pull-right btn-lg btn-success " %>
      <% end %>
    </div>
  </div>
  <%# 一覧 %>
  <div class="row my-5 justify-content-center">
    <div class="col-lg-5 mt-3">
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
          </tr>
        </thead>
        <tbody>
          <% @addresses.each do |address| %>
            <tr>
              <td></td>
              <td><%= address.postal_code %></td>
              <td><%= address.address %></td>
              <td><%= address.name %></td>
              <td>
                <%= link_to "編集する",edit_address_path(address), class:"btn btn-success my-3 mr-3" %>
              </td>
              <td>
                <%= link_to "削除する",address_path(address),method: :delete, class:"btn btn-success my-3 mr-3" %>
              </td>
            </tr>
          <% end %>
        <tbody>
      </table>
    </div>
  </div>