<h1>配送先登録・一覧</h1>
<%# 新規登録 %>
  <%= form_with model: @address do |f| %>
    <table>
      <tr>
        <th>
          <td><%= f.label :"郵便番号(ハイフンなし)", class:"form_label" %></td>
          <td><%= f.text_field :postal_code %></td>
        </th>
      </tr>
      <tr>
        <th>
          <td><%= f.label :"住所", class:"form_label" %></td>
          <td><%= f.text_field :address %></td>
        </th>
      </tr>
      <tr>
        <th>
          <td><%= f.label :"宛名", class:"form_label" %></td>
          <td><%= f.text_field :name %></td>
        </th>
      </tr>
      <tr>
        <td><%= f.submit '登録する' , class: "col-xs-2 pull-right btn-lg btn-success" %></td>
      </tr>
    </table>
  <% end %>
  <%# 一覧 %>
    <table class="table table-hover table-bordered">
      <thead>
        <tr>
          <th></th>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
        </tr>
      </thead>
      <tbody>
        <% @addresses.each do |address| %>
          <tr>
            <td></td>
            <td><%= address.postal_code %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td>
              <%= link_to "編集",edit_address_path(address), class: "btn btn-primary" %>
            </td>
            <td>
              <%= link_to "削除",address_path(address),method: :delete, class: "btn btn-danger" %>
            </td>
          </tr>
        <% end %>
      <tbody>
    </table>
    <%= paginate @addresses %>