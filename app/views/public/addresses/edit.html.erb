
    <h1>配送先変更</h1>
    <%= form_with model: @adrress, url: address_path,method: :patch do |f| %>
      <table>
        <tr>
          <th>
            <td><%= f.label :郵便番号（ハイフン無し）, class:"form_label"%></td>
            <td><%= f.text_field :postal_code, placeholder:"郵便番号" %></td>
          </th>
        </tr>
        <tr>
          <th>
            <td><%= f.label :住所, class:"form_label" %></td>
            <td><%= f.text_field :adrress, placeholder:"住所" %></td>
          </th>
        </tr>
        <tr>
          <th>
            <td><%= f.label :"宛名", class:"form_label" %></td>
            <td><%= f.text_field :name, placeholder:"宛名" %></td>
          </th>
        </tr>
          <td><%= f.submit '変更を保存', class:"btn btn-success my-3 mr-3" %></td>
          <td><%= link_to "配送先一覧へ戻る", addresses_path, class:"btn btn-outline-secondary" %></td>
        </th>
      </table>
    <% end %>