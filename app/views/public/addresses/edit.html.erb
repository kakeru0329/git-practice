<h1>配送先変更</h1>
<%= form_with model: @adrress, url: address_path,method: :patch do |f| %>
  <table>
    <tr>
      <div class="form-group">
        <%= f.label :郵便番号（ハイフン無し）, class:"form_label"%>
        <%= f.text_field :postal_code, placeholder:"郵便番号" %>
      </div>
    </tr>
    <tr>
      <div class="form_group">
        <%= f.label :住所, class:"form_label" %>
        <%= f.text_field :adrress, placeholder:"住所" %>
      </div>
      
      
    </tr>
    <tr>
      <div class="form-group">
        <%= f.label :"宛名", class:"form_label" %>
        <%= f.text_field :name, placeholder:"宛名" %>
      </div>
    </tr>
      <div class="form_group">
        <%= f.submit '変更を保存', class:"btn btn-success my-3 mr-3" %>
        <%= link_to "配送先一覧へ戻る", addresses_path, class:"btn btn-outline-secondary" %>
      </div>
  </table>
<% end %>