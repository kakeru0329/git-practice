<h2>カート</h2>
<p><%= link_to "カートの中身をすべて削除する", cart_all_destroy_path(@cart_items), method: :delete, class: "btn btn-danger" %></p>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |cart_item| %>
      <tr>
        <td>
          <%= image_tag cart_item.item.get_image(55,40) %>
          <%= cart_item.item.name %>
        </td>
        <td><%= cart_item.item.with_tax_price %></td>
        <td><%= cart_item.amount %></td>
        <td><%= cart_item.subtotal %></td>
        <% @total_amount +=  cart_item.subtotal %>
        <td><%= link_to "削除する", cart_item_path(cart_item), method: :delete, class: "btn btn-danger" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>


  <table class="table-hover", align="right">
    <thead>
    <tr>
      <th><h5>合計金額</h5></th>
      <th><h5><%= @total_amount %></h5></th>
    </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= link_to "買い物を続ける", items_path, class: "btn btn-info" %></td>
        <td></td>
        <td></td>
        <td><%= link_to "情報入力に進む", new_order_path, class: "btn btn-success center-block" %></td>
        <td></td>
      </tr>
    </tbody>
  </table>