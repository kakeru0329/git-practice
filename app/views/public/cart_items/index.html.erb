<h1>カート</h1>
<div>
  <%= link_to "カートの中身をすべて削除する", cart_all_destroy_path, method: :delete, class: "btn btn-danger" %>
  <table class="table table-hover table-bordered">
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
      </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <th>
            <%= attachment_image_tag @cart_items.item, :image, size: "55x43" %>
            <%= item.name %>
          </th>
          <th><%= item.with_tax_price %></th>
          <th>
            <%= f.hidden_field :amount %>
            <%= cart_item.amount %>
            <%= f.submit '編集を保存', class:"btn btn-success my-3 mr-3" %>
          </th>
          <th><%= cart_item.subtotal %></th>
          <th>合計金額
            <% total_amount +=  cart_item.subtotal %>
          </th>
          <th><%= link_to "削除する", cart_items_path(@cart_items), method: :delete, class: "btn btn-danger" %></th>
        </tr>
      <% end %>
    </tbody>
  </tabel>

  <%= link_to " 買い物を続ける", items_path, class: "btn btn-info" %>

  <table class="table table-bordered text-right">
    <tr>
      <td>合計金額</td>
      <td>
        <%= @total_price %>
      </td>
    </tr>
  </table>
    <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success center-block" %>
</div>