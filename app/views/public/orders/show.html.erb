<h1>注文履歴詳細</h1>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>注文日</th>
      <th>配送先</th>
      <th>支払方法</th>
      <th>商品名</th>
      <th>単価</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <% @order.each do |order| %>
      <tr>
        <td><%= order.created_at.strftime("%Y年%m月%d日") %></td>
        <td><%= order.address %></td>
        <td><%= order.payment_method %></td>
        <td><%= order.name %></td>
        <td><%= order.price %></td>
        <td><%= order.amount %></td>
        <td><%= order.subtotal %></td>
      </tr>
    <% end %>
    <%= link_to "注文履歴一覧へ戻る", orders_path, class: "btn btn-info btn-lg order-index-back" %>
  </tbody>
</table>