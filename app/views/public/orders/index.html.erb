<h1>注文履歴一覧</h1>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額（送料込）</th>
      <th>注文詳細</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td></td>
        <td><%= link_to order.created_at.strftime("%Y年%m月%d日") %></td>
        <td><%= order.address %></td>
        <td><%= order.item %></td>
        <td><% total_amount +=  freight %></td>
        <td><%= link_to "注文詳細", order_path(order), class: "btn btn-success" %></td>
      </tr>
    <% end %>
  </tbody>
</table>