<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

<table>
  <tr>
    <th>氏名</th>
      <td>(姓)<%= f.text_field :last_name, autofocus: true, autocomplete: "last_name"  %></td>
      <td>(名)<%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %></td>
  </tr>
  <tr>
    <th>氏名(フリガナ)</th>
      <td>(セイ)<%= f.text_field :last_name_kana, autofocus: true, autocomplete: "first_name" %></td>
      <td>(メイ)<%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name" %></td>
  </tr>
  <tr>
    <th>郵便番号(ハイフン無し)</th>
    <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "first_name" %></td>
  </tr>
  <tr>
    <th>住所</th>
      <td><%= f.text_field :address, autofocus: true, autocomplete: "first_name" %></td>
  </tr>
  <tr>
    <th>電話番号</th>
      <td><%= f.text_field :telephone_number, autofocus: true, autocomplete: "first_name" %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
  </tr>
  <tr>
    <th>パスワード(６文字以上)</th>
    <td><%= f.password_field :encrypted_password, autofocus: true, autocomplete: "encrypted_password" %></td>
  </tr>
  <tr>
    <th>パスワード(確認用)</th>
    <td><%= f.password_field :encrypted_password, autofocus: true, autocomplete: "encrypted_password" %></td>
  </tr>

</table>


  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認用） %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
