<div class="container">
  <div class="row text-center">
    <div class="col-md-12 mt-5">
      <h2>ジャンル一覧・追加</h2>
    </div>
  </div>

  <div class="row my-5 d-flex justify-content-center">
    <div class="col-xs-12">
      <%= form_with model: @genre,url: admin_genres_path,method: :post, remote: true do |f| %>
        <%= f.label :name, "ジャンル名" %>
        <%= f.text_field :name, id: "form" %>
        <%= f.submit "追加する" %>
      <% end %>
    </div>
  </div>
  <div class="row my-5 justify-content-center">
    <div class="col-lg-5 mt-3">
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td></td>
              <td><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre) %></td>
            </tr>
          <% end %>
        <tbody>
      </table>
    </div>
  </div>
</div>