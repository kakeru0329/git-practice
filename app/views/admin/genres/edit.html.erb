
<div>
  <div>
    <h2 class="text-center">ジャンル編集</h2>
  </div>
  <div>
    <div>
      <%= form_with model: @genre,url: admin_genre_path, method: :patch, local: true do |f| %>
      <div class="form-group">
        <%= f.label "ジャンル名" %>
        <%= f.text_field :name %>
      </div>
      <div>
        <%=f.submit "変更を保存" %>
        <%= link_to "ジャンル一覧へ戻る", admin_genres_path　%>
      </div>
      <% end %>
      </div>
    </div>
</div>