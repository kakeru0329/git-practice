<h1>注文履歴詳細</h1>
<div>
  <table>
    <thead>
      <tr>
        <th>注文日</th>
        <th>商品名</th>
        <th>数量</th>
        <th>単価(税込)</th>
        <th>送料</th>
        <th>小計</th>
        <th>購入者</th>
        <th>配送先</th>
        <th>支払方法</th>
      </tr>
      <tr>注文ステータス</tr>
    </thead>
  </table>
</div>
<div>
  <tbody>
    <%= @order.erach do |order| %>
    <tr>
      <th><%= order.created_at.strftime("%Y年%m月%d日%-H時%M分%S秒") %></th>
      <th><%= order.item.name %></th>
      <th><%= order.count %></th>
      <th><%= order.price %></th>
      <th><%= ordre.freight %></th>
      <th><%= order.totle_amount %></th>
      <th><%= order.customer %></th>
      <th><%= order.address %></th>
      <th><%= order.payment_method %></th>
    </tr>
    <% end %>
  </tbody>
</div>