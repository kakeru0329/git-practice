<h2>会員一覧</h2>

<table class="table">
      <thead>
        <tr>
          <th></th>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>

      <tbody>
        <% @customers.each do |costomer| %>
          <tr>
            <td><%= @customers_id %></td>
          </tr>
          <tr>
            <td><%= @customers_name %></td>
          </tr>
          <tr>
            <td><%= @customers_email %></td>
          </tr>
          <tr>
            <td><% if @customer.is_active == true %>
              <p class="text-success ">退会済</p>
              <% else %>
              <p class="text-secondary ">有効</p>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
</table>