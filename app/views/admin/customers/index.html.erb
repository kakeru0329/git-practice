<h2>会員一覧</h2>

<table class="table">
      <thead>
        <tr>
          <th></th>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>

      <tbody>
        <% @customers.each do |customer| %>
         <tr>
          <td class="info col-xs-1">
            <%= @customers_id %>
          </td>
          <td class="text-left">
            <%= link_to @customer_last_name,admin_customer_path(customer) %>
          </td>
          <td class="text-left">
            <%= @customers_email %>
          </td>
          <td class="col-xs-2">
            <% if @customers_is_deleted == true%>
              <p class="text-secondary">退会済</p>
            <% else %>
              <p class="text-success">有効</p>
            <% end %>
          </td>
         </tr>
        <% end %>
      </tbody>
</table>