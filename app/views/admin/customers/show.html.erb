<h1>会員詳細</h1>
<h2><%= last_name(@customer)%>さんの会員詳細</h2>

<table>
  <tr>
    <th>会員ID</th>
    <td><%= @customer.id %></td>
  </tr>
  <tr>
    <th>氏名</th>
    <td>(姓)<%= @ustomer.last_name %></td>
    <td>(名)<%= @customer.first_name %></td>
  </tr>
  <tr>
    <th>氏名（フリガナ)</th>
    <td>(セイ)<%= @customer.last_name_kana %></td>
    <td>(メイ)<%= @customer.first_name_kana %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= @customer.email %></td>
  </tr>
  <tr>
    <th>郵便番号</th>
    <td><%= @customer.postal_code %></td>
  </tr>
  <tr>
    <th>住所</th>
    <td><%= @customer.address %></td>
  </tr>
  <tr>
    <th>電話番号</th>
    <td><%= @customer.telephone_number %></td>
  </tr>
  <tr>
    <th>退会ステータス</th>
    <td>
      <% if @customer.is_deleted == true %>
        <p class="text-success">退会済</p>
      <% else %>
        <p class="text-secondary">有効</p>
      <% end %>
    </td>
  </tr>

</table>
<div>
  <p><%= link_to "編集する",edit_admin_customer_path(customer.id) %></p>
  <p><%= link_to "注文履歴一覧を見る",admin_root_path %></p>
</div>