<h2>商品一覧</h2>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>商品名</th>
      <th>商品画像</th>
      <th>税抜価格</th>
      <th>販売ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td></td>
        <td><%= link_to item.name, admin_item_path(item.id) %></td>
        <td><%= image_tag item.get_image(80,80) %></td>
        <td><%= item.price%></td>
        <td>
          <% if item.is_active == true %>
            <p class="text-success ">販売中</p>
            <% else %>
            <p class="text-secondary ">販売停止中</p>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>