<<div class="container">
  <div class="row text-center">
    <div class="col-md-12 mt-5">
      <h2>商品詳細</h2>
        <%= image_tag @item.get_image(300, 200) %>
    </div>
    <div class="col-md-12 mt-5">
      <div class="col-lg">
        <table class="table">
          <tr>
            <th>商品名</th>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <th>商品説明</th>
            <td><%= @item.introduction %></td>
          </tr>
          <tr>
            <th>ジャンル</th>
            <td><%= @item.genre_id %></td>
          </tr>
          <tr>
            <th>税込価格<br>
                (税抜き価格)
            </th>
            <td><%= @item.with_tax_price%><br>
            (<%= @item.price %>) 円</td>
          </tr>
          <tr>
            <th>販売ステータス</th>
              <td>
                <% if @item.is_active == true %>
                  <p class="text-success ">販売中</p>
                <% else %>
                  <p class="text-secondary ">販売停止中</p>
                <% end %>
              </td>
          </tr>
        </table>
        <div class="row justify-content-center">
          <div class="col-5">
            <p><%= link_to '編集する', edit_admin_item_path(@item.id), class:"btn btn-success my-3 mr-3" %></p>
            <p><%= link_to "商品一覧へ戻る", admin_items_path, class:"btn btn-outline-secondary" %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>