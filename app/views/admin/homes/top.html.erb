<h2>注文履歴一覧</h2>
  <table class="table">
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td>
            <%= link_to admin_order_path(order) do %>
              <%= order.created_at.strftime("%Y年%m月%d日%-H時%M分%S秒") %>
            <% end %>
          </td>
          <td><%= last_name(order.customer) %></td>
          <td><%= order.order_details.count %></td>
          <td><%= order.status %></td>
        </tr>
        <% end %>
      </tbody>
    </thead>
  </table>